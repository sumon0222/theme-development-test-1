{% comment %}
  This is the custom section that acts as a wrapper for the index page.
  It uses blocks to render content directly.
{% endcomment %}

{% for block in section.blocks %}
  <div class="index-block" {{ block.shopify_attributes }}>
    {% case block.type %}
      {% when 'hero' %}
        <div class="hero-section">
          <h1>{{ block.settings.hero_title }}</h1>
          <p>{{ block.settings.hero_description }}</p>
        </div>

      {% when 'flash-sale' %}
        <div class="flash-sale-section">
          <h2>{{ block.settings.flash_sale_title }}</h2>
          <p>{{ block.settings.flash_sale_description }}</p>
        </div>

      {% when 'category' %}
        <div class="category-section">
          <h2>{{ block.settings.category_title }}</h2>
          <p>{{ block.settings.category_description }}</p>
        </div>

      {% when 'best-selling' %}
        <div class="best-selling-section">
          <h2>{{ block.settings.best_selling_title }}</h2>
          <p>{{ block.settings.best_selling_description }}</p>
        </div>

      {% when 'category-music' %}
        <div class="category-music-section">
          <h2>{{ block.settings.category_music_title }}</h2>
          <p>{{ block.settings.category_music_description }}</p>
        </div>

      {% when 'all-product' %}
        <div class="all-product-section">
          <h2>{{ block.settings.all_product_title }}</h2>
          <p>{{ block.settings.all_product_description }}</p>
        </div>

      {% when 'service-quality' %}
        <div class="service-quality-section">
          <h2>{{ block.settings.service_quality_title }}</h2>
          <p>{{ block.settings.service_quality_description }}</p>
        </div>
    {% endcase %}
  </div>
{% endfor %}

{% schema %}
{
  "name": "Index Wrapper",
  "settings": [],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero Section",
      "settings": [
        {
          "type": "text",
          "id": "hero_title",
          "label": "Hero Title",
          "default": "Welcome to Our Store"
        },
        {
          "type": "textarea",
          "id": "hero_description",
          "label": "Hero Description",
          "default": "Discover our amazing products and offers."
        }
      ]
    },
    {
      "type": "flash-sale",
      "name": "Flash Sale Section",
      "settings": [
        {
          "type": "text",
          "id": "flash_sale_title",
          "label": "Flash Sale Title",
          "default": "Flash Sale"
        },
        {
          "type": "textarea",
          "id": "flash_sale_description",
          "label": "Flash Sale Description",
          "default": "Hurry up! Limited time offers."
        }
      ]
    },
    {
      "type": "category",
      "name": "Category Section",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title",
          "default": "Shop by Category"
        },
        {
          "type": "textarea",
          "id": "category_description",
          "label": "Category Description",
          "default": "Explore our wide range of categories."
        }
      ]
    },
    {
      "type": "best-selling",
      "name": "Best Selling Section",
      "settings": [
        {
          "type": "text",
          "id": "best_selling_title",
          "label": "Best Selling Title",
          "default": "Best Sellers"
        },
        {
          "type": "textarea",
          "id": "best_selling_description",
          "label": "Best Selling Description",
          "default": "Check out our best-selling products."
        }
      ]
    },
    {
      "type": "category-music",
      "name": "Category Music Section",
      "settings": [
        {
          "type": "text",
          "id": "category_music_title",
          "label": "Category Music Title",
          "default": "Music Category"
        },
        {
          "type": "textarea",
          "id": "category_music_description",
          "label": "Category Music Description",
          "default": "Explore our music-related products."
        }
      ]
    },
    {
      "type": "all-product",
      "name": "All Product Section",
      "settings": [
        {
          "type": "text",
          "id": "all_product_title",
          "label": "All Product Title",
          "default": "All Products"
        },
        {
          "type": "textarea",
          "id": "all_product_description",
          "label": "All Product Description",
          "default": "Browse our complete product catalog."
        }
      ]
    },
    {
      "type": "service-quality",
      "name": "Service Quality Section",
      "settings": [
        {
          "type": "text",
          "id": "service_quality_title",
          "label": "Service Quality Title",
          "default": "Our Service Quality"
        },
        {
          "type": "textarea",
          "id": "service_quality_description",
          "label": "Service Quality Description",
          "default": "We are committed to providing the best service."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Index Layout",
      "blocks": []
    }
  ]
}
{% endschema %}