{% schema %}
{
  "name": "Category Section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Categories"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Browse By Category"
    }
  ],
  "presets": [
    {
      "name": "Category Section"
    }
  ]
}
{% endschema %}

<section class="categories-section">
  <div class="categories-wrapper">
    <div class="best-selling-up-block">
      <div class="todays-sale category-text">{{ section.settings.subheading }}</div>
      <div class="browse-by-category">
        <h2 class="heading-3">{{ section.settings.heading }}</h2>
      </div>
    </div>
    <div class="category-lists">
      <!-- Dynamically fetch and display collections -->
      {% for collection in collections %}
        <a href="{{ collection.url }}" class="category-items"
          style="--svg-normal-color:#000000; --svg-hover-color: #FFFFFF;">
          
          <!-- Display Collection Image -->
          {% if collection.image != blank %}
            <div class="svg-image-category">
              <img src="{{ collection.image | image_url }}" class="svg-icon" alt="{{ collection.title }}">
            </div>
          {% endif %}
          
          <!-- Display Collection Title -->
          <div class="text-block-9">{{ collection.title }}</div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Default SVG Color (via filter) */
  .svg-image-category img {
    filter: brightness(0) saturate(100%) invert(0%) sepia(0%) saturate(7500%) hue-rotate(0deg) brightness(100%) contrast(100%);
    transition: filter 0.3s ease;
  }

  /* Change SVG color on Hover */
  .category-items:hover .svg-image-category img {
    filter: brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(7500%) hue-rotate(0deg) brightness(100%) contrast(100%);
  }
</style>