{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is a custom section"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div>
  <h2>{{ section.settings.heading }}</h2>
  {% for block in section.blocks %}
    <p>{{ block.settings.text }}</p>
  {% endfor %}
</div>
