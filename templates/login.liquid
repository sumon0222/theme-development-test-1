{% if customer %}
  <script>window.location.href = "{{ routes.account_url }}";</script>
{% endif %}

<div class="customer-login">
  <h1>Login</h1>
  <form method="post" action="{{ routes.account_login_url }}">
    {{ form.errors | default_errors }}

    <label for="email">Email</label>
    <input type="email" name="customer[email]" id="email" required>

    <label for="password">Password</label>
    <input type="password" name="customer[password]" id="password" required>

    <button type="submit">Login</button>
  </form>

  <a href="{{ routes.account_register_url }}">Create an account</a>
</div>
